{{#if profileData}}
<h1>Oh look it's {{name}}s profile page!!</h1>


<div class="profilePageImgBox" >
    {{!-- {{>stars}} --}}
<img class="profilePageImg" src="/images/{{img}}" alt="Image of {{name}}">
</div>

<p>
    {{name}}
</p>


<h2>Dietary Requirements:</h2> 
<ul>
    {{#if requirement}}
    {{#each requirement}}
    <li>{{requirement}}</li>
    {{/each}}
    {{else}}
    <p class="centerText"> 
        {{name}} doesn't have any dietary requirements.
    </p>
    {{/if}}
</ul>

<a href="/dietaryRequirement/{{user_id}}"><input class="button buttonLarge buttonAtBottom" type="submit" value="New dietary requirement?"></a>
<a href="/addDayAway/{{user_id}}"><input class="button buttonLarge buttonAtBottom" type="submit" value="Going away?"></a>
<a href="/selectDay/{{user_id}}"><input class="button buttonLarge buttonAtBottom" type="submit" value="Select or change your cooking day"></a>

{{else}}
<h1>Wha-woh, this profile doesn't exist!!</h1>
<p class="centerText hoverBackground" >
    <a href="/addUser">To create one click here</a>
</p>
{{/if}}

